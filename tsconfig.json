{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2022",
        "lib": [
            "es2022"
        ],
        "outDir": "out",
        "rootDir": "src",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ],
    "references": [
        {
            "path": "./client"
        },
        {
            "path": "./server"
        }
    ]
}